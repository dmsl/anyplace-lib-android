<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/gmapsGrayColor"
  tools:context=".android.ui.cv.logger.CvLoggerActivity"
  >
  <!-- NOTE: Modifying the order of the elements in this file might cause crashes.
  There is a numbering for this order.
  -->

  <androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 1. CAMERA VIEW -->
    <!--app:cardCornerRadius="75dp"-->
    <!--android:elevation="0dp"-->
    <androidx.camera.view.PreviewView
      android:id="@+id/pv_camera"

      android:layout_width="0dp"
      android:layout_height="0dp"
      android:background="@color/black"
      android:scaleType="fitStart"

      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintDimensionRatio="4:6"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintVertical_bias="0.0"

      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      />
    <!--</androidx.camera.view.PreviewView>-->
    <!-- INFO: this is required, even though it has no children.
     If this tag was closed directly (e.g., using />), then
     the code in
   -->

    <!-- 2. OVERLAY: DETECTED OBJECTS -->
    <cy.ac.ucy.cs.anyplace.lib.android.cv.tensorflow.visualization.TrackingOverlayView
      android:id="@+id/tov_camera"
      android:layout_width="0dp"
      android:layout_height="0dp"
      app:layout_constraintDimensionRatio="4:6"

      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.0" />




    <!--<cy.ac.ucy.cs.anyplace.lib.android.cv.tensorflow.visualization.TrackingOverlayView-->
    <!--  android:id="@+id/tov_camera"-->
    <!--  android:layout_width="0dp"-->
    <!--  android:layout_height="0dp"-->


    <!--  app:layout_constraintBottom_toBottomOf="parent"-->
    <!--  app:layout_constraintEnd_toEndOf="parent"-->
    <!--  app:layout_constraintHorizontal_bias="0.0"-->
    <!--  app:layout_constraintStart_toStartOf="parent"-->
    <!--  app:layout_constraintTop_toTopOf="parent"-->
    <!--  app:layout_constraintVertical_bias="0.0" />-->

    <!-- 3. GOOGLE MAPS
            It is hidden when Camera View and Detections Overlay are visible.
     -->
    <com.google.android.gms.maps.MapView
      android:id="@+id/mapView"
      android:elevation="2dp"
      android:layout_width="0dp"
      android:layout_height="0dp"
      app:layout_constraintBottom_toBottomOf="parent"

      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.0" />

    <!-- 4.1 STATUS: sticky status message
    e.g. entering a particular mode
    -->
    <cy.ac.ucy.cs.anyplace.lib.android.utils.ui.OutlineTextView
        android:id="@+id/tv_statusSticky"
        android:elevation="100dp"
        android:layout_width="0dp"
        android:visibility="invisible"
        tools:text="demo-Status"
        tools:visibility="visible"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:gravity="center"

        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        app:textAllCaps="false"
        android:textStyle="bold"

        android:translationY = "2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:outlineColor="@color/white_B0"
        app:outlineWidth="0.5dp"
        />


    <!-- 4.2 OVERLAY: WARNING
            An empty [View] that quickly flashes yellow/red to bring attention
            using [StatusUpdater]
    -->
    <View
      android:id="@+id/view_statusBackground"
      android:elevation="39dp"
      android:layout_width="0dp"
      android:layout_height="68dp"
      android:alpha="0.8"
      tools:alpha="0.8"
      android:background="@color/yellowDark"
      android:visibility="invisible"
      app:layout_constraintBottom_toBottomOf="parent"

      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="parent"

      app:layout_constraintVertical_bias="0.0" />


    <!-- 5. OVERLAY: WARNING BACKGROUND
            Solid background behind the [StatusUpdater]'s [tv_statusTitle] and [tv_statusSubtitle]
     -->
    <View
      android:id="@+id/view_warning"
      android:elevation="40dp"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:alpha="0"
      android:background="@color/yellowDark"
      android:visibility="invisible"
      tools:visibility="visible"
      app:layout_constraintBottom_toBottomOf="parent"

      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="parent"

      app:layout_constraintVertical_bias="0.0" />


    <!-- 5.1. TITLE: StatusUpdater -->
    <TextView
      android:id="@+id/tv_msgTitle"
      android:elevation="40dp"
      android:layout_width="0dp"

      android:visibility="invisible"
      tools:text="Msg Title"
      tools:visibility="visible"
      android:layout_height="wrap_content"
      android:fontFamily="sans-serif-black"
      android:gravity="center"

      android:textColor="@color/colorPrimary"
      android:textSize="30sp"
      app:textAllCaps="false"
      android:textStyle="bold"

      android:translationY = "2dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      />
      <!--app:outlineColor="@color/white_B0"-->
      <!--app:outlineWidth="1dp" -->

    <!-- 5.2. TITLE: StatusUpdater -->
    <TextView
      android:id="@+id/tv_msgSubtitle"
      android:elevation="40dp"
      android:translationY = "-2dp"
      android:layout_width="0dp"
      android:visibility="invisible"
      tools:visibility="visible"
      android:layout_height="wrap_content"
      android:fontFamily="sans-serif"
      android:gravity="center"
      android:textAllCaps="true"
      android:textColor="@color/colorPrimary"
      android:textSize="18sp"
      tools:text="This is the msg subtitle"
      app:textAllCaps="false"
      android:textStyle="bold"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/tv_msgTitle"
      />

    <!-- 6. Settings Button -->
    <com.google.android.material.button.MaterialButton
      android:id="@+id/button_settings"
      android:elevation="50dp"
      android:layout_width="58dp"
      android:layout_height="58dp"
      android:layout_alignParentEnd="true"
      android:layout_gravity="end"
      android:layout_margin="8dp"

      android:insetLeft="0dp"
      android:insetTop="0dp"
      android:insetRight="0dp"
      android:insetBottom="0dp"
      app:cornerRadius="50dp"
      app:icon="@drawable/ic_settings_dark"
      app:iconGravity="textStart"
      app:iconPadding="0dp"
      app:iconSize="42dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  </androidx.constraintlayout.widget.ConstraintLayout>


  <include
    android:id="@+id/bottom_ui"
    layout="@layout/bottom_sheet_cv_logging"
    android:elevation="0dp"
    tools:layout_editor_absoluteY="4dp" />




</androidx.coordinatorlayout.widget.CoordinatorLayout>
