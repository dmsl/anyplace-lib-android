<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">




  <!--parent="@style/Widget.AppCompat.Button.Borderless"-->
  <style name="SettingsButton" parent="@style/Widget.MaterialComponents.Button.TextButton">
    <item name="android:background">@drawable/button_settings_menu_item</item>
    <item name="android:textAllCaps">false</item>
    <item name="android:textAlignment">viewStart</item>
    <item name="android:paddingLeft">30dp</item>
    <item name="iconTint">@color/darkGray</item>
    <item name="android:textColor">@color/darkGray</item>
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textStyle">normal</item>
    <item name="android:textSize">15sp</item>
    <item name="icon">@drawable/ic_blank_icon</item>
    <item name="android:colorActivatedHighlight">@color/darkGray</item>
    <item name="backgroundTint">@null</item>
  </style>

    <style name="SettingsButtonDisabled" parent="@style/SettingsButton">
      <item name="android:textStyle">normal</item>
      <item name="android:textSize">12sp</item>
      <item name="android:textColor">@color/gray</item>
    </style>


  <style name="SignInButtonAnyplace" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
    <item name="android:textColor">@color/white</item>
    <item name="android:background">@drawable/button_login_local</item>
    <item name="icon">@drawable/ic_anyplace</item>
    <item name="iconTint">@color/white</item>
  </style>

  <style name="SignInButtonGoogle" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
    <item name="android:textColor">@color/colorPrimaryDark</item>
    <item name="android:background">@drawable/button_login_google</item>
    <item name="icon">@drawable/ic_google_signin</item>
    <item name="backgroundTint">@null</item>
  </style>

  <style name="SettingsRound" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
    <item name="android:textColor">@color/colorPrimaryDark</item>
    <item name="android:background">@drawable/button_settings_round</item>
    <item name="icon">@drawable/ic_settings_dark</item>
    <item name="backgroundTint">@null</item>
  </style>


  <!--android:backgroundTint="@color/white"-->
  <style name="ButtonRound" >
    <item name="android:background">@drawable/button_round</item>
    <item name="tint">@color/white</item>
  </style>

<!-- com.google.android.material.button.MaterialButton -->
  <style name="MaterialButtonIcon" parent="@style/Theme.MaterialComponents">
    <item name="android:layout_width">48dp</item>
    <item name="android:layout_height">48dp</item>
    <item name="android:layout_margin">6dp</item>
    <item name="android:insetTop">0dp</item>
    <item name="android:insetRight">0dp</item>
    <item name="android:insetBottom">0dp</item>
    <item name="android:padding">0dp</item>
    <item name="android:backgroundTint">@color/colorPrimary</item>
    <item name="tint">@color/white</item>
  </style>



  <style name="CustomChipStyle" parent="Widget.MaterialComponents.Chip.Filter" >
    <item name="chipBackgroundColor">@color/chip_background_color</item>
    <item name="android:textColor">@color/chip_text_color</item>
    <item name="checkedIconTint">@color/chip_text_color</item>
  </style>

  <style name="PrimaryButton" parent="@style/Widget.MaterialComponents.Button.TextButton">
    <item name="android:textSize">18sp</item>
    <item name="cornerRadius">8dp</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:background">@drawable/button_primary</item>
    <item name="backgroundTint">@null</item>
  </style>
  
  <style name="TimerProgressBar" >
    <item name="android:indeterminateOnly">false</item>
    <item name="android:progressDrawable">@drawable/timer_progressbar_circle</item>
  </style>


  <style name="BottomSheetTitle" >
    <item name="android:textColor">@color/black</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textSize">20sp</item>
  </style>
  <style name="BottomSheetSection" >
    <item name="android:textColor">@color/colorPrimaryDark</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textSize">15sp</item>
  </style>

</resources>