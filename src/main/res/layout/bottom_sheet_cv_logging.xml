<?xml version="1.0" encoding="utf-8"?>

  <!--LinearLayout-->
<androidx.constraintlayout.widget.ConstraintLayout

  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/bottom_sheet"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:orientation="vertical"
  android:padding="0dp"
  android:paddingTop="0dp"
  app:behavior_hideable="true"
  app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

  <LinearLayout
    android:id="@+id/bottom_sheet_internal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/bottom_sheet_cv_logging_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="8dp"
    android:paddingTop="0dp"
    android:layout_marginTop="6dp"
    app:layout_constraintTop_toBottomOf="@id/button_scannedObjects">


    <androidx.constraintlayout.widget.ConstraintLayout
      android:id="@+id/gesture_layout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:paddingTop="0dp"
      android:paddingBottom="20dp">

      <ImageView
        android:id="@+id/bottom_sheet_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/ic_icon_up"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/darkGray" />


      <SeekBar
        android:id="@+id/seekBar_slidingWindow"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:max="10"
        android:min="1"
        android:progress="1"
        app:layout_constraintLeft_toRightOf="@id/tv_titleSlidingWindowSetting"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_titleCvSettings"
        tools:layout_editor_absoluteX="168dp"
        tools:layout_editor_absoluteY="111dp" />

      <TextView
        android:id="@+id/tv_titleCvSettings"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Settings"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider_beforeSettings" />

      <TextView
        android:id="@+id/tv_titleSlidingWindowSetting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Sliding Window:"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/seekBar_slidingWindow"
        app:layout_constraintTop_toBottomOf="@id/tv_titleCvSettings" />


      <TextView
        android:id="@+id/tv_titleCvSettingsDeveloper"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="@string/developer_stats"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider_beforeStats" />


      <TextView
        android:id="@+id/tv_titleDevSlidingWindow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/sliding_window"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_titleCvSettingsDeveloper" />


      <TextView
        android:id="@+id/tv_titleElapsedTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Elapsed Time"
        android:textColor="@color/darkGray"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_titleDevSlidingWindow" />

      <TextView
        android:id="@+id/tv_elapsedTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="2.4s"
        android:textColor="@color/darkGray"
        app:layout_constraintBottom_toBottomOf="@id/tv_titleElapsedTime"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_titleElapsedTime" />


      <TextView
        android:id="@+id/tv_titleCurrentWindow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Current Window"
        android:textColor="@color/darkGray"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_elapsedTime" />


      <TextView
        android:id="@+id/tv_currentWindow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="3"
        android:textColor="@color/darkGray"
        app:layout_constraintBottom_toBottomOf="@id/tv_titleCurrentWindow"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_titleCurrentWindow" />


      <TextView
        android:id="@+id/tv_titleWindowObjects"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Unique Objects"
        android:textColor="@color/darkGray"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_titleCurrentWindow" />


      <TextView
        android:id="@+id/tv_windowObjects"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="5"
        android:textColor="@color/darkGray"
        app:layout_constraintBottom_toBottomOf="@id/tv_titleWindowObjects"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_titleWindowObjects" />

      <TextView
        android:id="@+id/tv_titleTotalObjects"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Total Unique Objects"
        android:textColor="@color/darkGray"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_titleWindowObjects" />


      <TextView
        android:id="@+id/tv_totalObjects"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="5"
        android:textColor="@color/darkGray"
        app:layout_constraintBottom_toBottomOf="@id/tv_titleTotalObjects"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_titleTotalObjects" />

      <TextView
        android:id="@+id/tv_titleCV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/inference"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_titleTotalObjects" />


      <TextView
        android:id="@+id/frame"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/bottom_sheet_frame_text"
        android:textColor="@color/darkGray"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_titleCV" />

      <!--app:layout_constraintTop_toBottomOf="@id/tv_titleDevSlidingWindow"-->


      <TextView
        android:id="@+id/frame_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/bottom_sheet_resolution_placeholder"
        android:textColor="@color/darkGray"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_titleCV" />


      <TextView
        android:id="@+id/crop"
        android:layout_width="30dp"
        android:layout_height="24dp"
        android:text="@string/bottom_sheet_crop_text"
        android:textColor="@color/darkGray"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/frame_info" />


      <TextView
        android:id="@+id/crop_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:text="@string/bottom_sheet_resolution_placeholder"
        android:textColor="@color/darkGray"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/frame_info" />

      <TextView
        android:id="@+id/time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/bottom_sheet_time_text"
        android:textColor="@color/darkGray"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/crop_info" />


      <TextView
        android:id="@+id/time_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/bottom_sheet_time_placeholder"
        android:textColor="@color/darkGray"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/crop_info" />


      <View
        android:id="@+id/divider_beforeStats"
        android:layout_width="393dp"
        android:layout_height="2dp"
        android:layout_marginTop="20dp"
        android:background="@color/mediumGray"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/seekBar_slidingWindow"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="87dp" />

      <View
        android:id="@+id/divider_beforeSettings"
        android:layout_width="393dp"
        android:layout_height="2dp"
        android:layout_marginTop="20dp"
        android:background="@color/mediumGray"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_logging"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="87dp" />

      <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_logging"
        style="@style/PrimaryButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:padding="18dp"
        android:text="Start Logging"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bottom_sheet_arrow" />

    </androidx.constraintlayout.widget.ConstraintLayout>

  </LinearLayout>

  <com.google.android.material.button.MaterialButton
    android:id="@+id/button_clearObjects"
    android:layout_width="0dp"
    android:layout_height="52dp"
    android:layout_margin="6dp"

    android:visibility="invisible"
    android:alpha="0.5"
    android:backgroundTint="@color/darkGray"
    android:enabled="false"

    android:text="Clear"
    android:textColor="@color/white"
    android:textSize="15sp"
    app:cornerRadius="10dp"
    app:layout_constraintHorizontal_bias="0.5"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintRight_toLeftOf="@id/button_scannedObjects"
    />


  <com.google.android.material.button.MaterialButton
    android:id="@+id/button_scannedObjects"
    android:layout_width="52dp"
    android:layout_height="52dp"
    android:text="99"
    android:textStyle="bold"
    android:textAlignment="gravity"
    android:insetLeft="0dp"
    android:insetTop="0dp"
    android:insetRight="0dp"
    android:insetBottom="0dp"
    android:padding="0dp"
    android:layout_margin="6dp"
    android:layout_marginBottom="12dp"
    android:visibility="invisible"

    android:textSize="15sp"
    app:cornerRadius="50dp"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    />
</androidx.constraintlayout.widget.ConstraintLayout>
