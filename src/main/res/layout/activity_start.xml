<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/AppTheme.Compat.Fullscreen"
    xmlns:tools="http://schemas.android.com/tools">

  <ImageView
      android:id="@+id/appLogo"
      android:layout_width="match_parent"
      android:layout_height="300dp"
      android:layout_centerVertical="true"
      android:contentDescription="@string/lash_fire"
      android:scaleType="centerInside"
      android:src="@drawable/logo_lashfire_bg_white"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.30"
      />

  <TextView
      android:id="@+id/tvLashfire"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/appLogo"
      android:gravity="center_horizontal"
      app:layout_constraintTop_toBottomOf="@id/appLogo"
      android:layout_marginTop="8dp"
      android:shadowDx="5"
      android:shadowDy="5"
      android:shadowRadius="5"
      android:text="@string/lash_fire"
      android:textColor="@color/colorPrimaryDark"
      android:fontFamily="@font/microgramma"
      android:textSize="50sp"
      android:textStyle="bold" />


  <TextView
      android:id="@+id/tvAppName"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/tvLashfire"
      android:gravity="center_horizontal"
      android:layout_marginTop="22dp"
      android:text="SMAS"
      app:layout_constraintTop_toBottomOf="@id/tvLashfire"
      android:textColor="@color/colorPrimaryDark"
      android:textSize="50sp"
      android:textStyle="bold" />

  <TextView
      android:id="@+id/tvVersion"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/tvAppName"
      android:gravity="center_horizontal"
      tools:text="v. 0.0.0"
      app:layout_constraintTop_toBottomOf="@id/tvAppName"
      android:textColor="@color/colorPrimaryDark"
      android:textSize="22sp"
      android:textStyle="italic" />

</androidx.constraintlayout.widget.ConstraintLayout>
