<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
>

  <data>
    <variable name="user" type="cy.ac.ucy.cs.anyplace.lib.models.User" />
    <variable
        name="mainViewModel"
        type="cy.ac.ucy.cs.anyplace.lib.android.viewmodels.MainViewModel" />
  </data>

  <androidx.constraintlayout.widget.ConstraintLayout
      android:id="@+id/constraintLayout"
      android:layout_width="match_parent"
      android:background="@drawable/dialog_background"
      android:paddingVertical="22dp"
      android:paddingHorizontal="22dp"
      android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textView_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:text="@string/clear_local_data"
        android:textColor="@color/black"
        android:textSize="22sp"
        app:layout_constraintTop_toTopOf="@id/constraintLayout"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/textView_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:text="These are Object Maps not synced with the server."
        android:textColor="@color/darkGray"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/textView_title"
        app:layout_constraintStart_toStartOf="parent"
        />

    <RadioGroup
        android:id="@id/radioGroup_options"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:paddingVertical="8dp"
        android:paddingHorizontal="4dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="155dp"
        tools:layout_editor_absoluteY="69dp"
        app:layout_constraintTop_toBottomOf="@id/textView_summary"
        >


      <RadioButton
          android:id="@+id/radioButton_floor"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:visibility="gone"
          tools:visibility="visible"
          tools:text="for cur-floor" />

      <RadioButton
          android:id="@+id/radioButton_space"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:visibility="gone"
          tools:visibility="visible"
          tools:text="for cur-space" />

      <RadioButton
          android:id="@+id/radioButton_all"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:checked="true"
          android:text="@string/for_all_spaces" />
    </RadioGroup>

    <Button
        android:id="@+id/button_clearCaches"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/button_delete"
        android:text="@string/confirm"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup_options"
        app:layout_constraintVertical_bias="0.0"

        app:backgroundTint="@null" />


  </androidx.constraintlayout.widget.ConstraintLayout>
</layout>