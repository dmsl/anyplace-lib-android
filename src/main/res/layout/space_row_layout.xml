<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto">

  <data>
    <variable name="space" type="cy.ac.ucy.cs.anyplace.lib.models.Space" />
  </data>

  <androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/spaceRowLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp">

    <com.google.android.material.card.MaterialCardView
      android:id="@+id/row_CardView"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      app:strokeWidth="2dp"
      app:strokeColor="@color/strokeColor"
      app:cardCornerRadius="10dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.5"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent">

      <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgroundColor">

        <TextView
          android:id="@+id/name_textView"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginStart="12dp"
          android:layout_marginEnd="12dp"
          android:maxLines="1"
          android:text="@{space.name}"
          android:textColor="@color/titleColor"
          android:textSize="18sp"
          android:ellipsize="end"
          android:textStyle="bold"
          android:typeface="normal"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent" />

        <!--TODO PM: set type of the image...-->
        <ImageView
          android:id="@+id/imageView2"
          android:layout_width="70dp"
          android:layout_height="70dp"
          android:layout_marginStart="12dp"
          android:layout_marginTop="12dp"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/name_textView"
          app:srcCompat="@drawable/ic_building"
          app:tint="@color/colorAccent"
          android:contentDescription="@string/indoor_space" />

        <TextView
          android:id="@+id/description_textView"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginStart="8dp"
          android:layout_marginEnd="8dp"
          android:ellipsize="end"
          android:maxLines="2"
          android:text="@{space.description}"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toEndOf="@+id/imageView2"
          app:layout_constraintTop_toTopOf="@+id/imageView2" />

        <TextView
          android:id="@+id/lbl_town_textView"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="8dp"
          android:text="@string/town_"
          app:layout_constraintStart_toStartOf="@+id/description_textView"
          app:layout_constraintTop_toBottomOf="@+id/description_textView" />

        <TextView
          android:id="@+id/_lbl_country_textView"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="8dp"
          android:text="@string/country_"
          app:layout_constraintStart_toStartOf="@+id/lbl_town_textView"
          app:layout_constraintTop_toBottomOf="@+id/lbl_town_textView" />

        <androidx.constraintlayout.widget.Guideline
          android:id="@+id/guideline2"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          app:layout_constraintGuide_begin="156dp" />

        <TextView
          android:id="@+id/town_textView"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Nicosia"
          app:layout_constraintBottom_toBottomOf="@+id/lbl_town_textView"
          app:layout_constraintStart_toStartOf="@+id/guideline2"
          app:layout_constraintTop_toTopOf="@+id/lbl_town_textView" />

        <TextView
          android:id="@+id/country_textView"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="8dp"
          android:text="Cyprus"
          app:layout_constraintStart_toStartOf="@+id/guideline2"
          app:layout_constraintTop_toBottomOf="@+id/town_textView" />

        <TextView
          android:id="@+id/type_textView"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="building"
          app:layout_constraintEnd_toEndOf="@+id/imageView2"
          app:layout_constraintStart_toStartOf="@+id/imageView2"
          app:layout_constraintTop_toBottomOf="@+id/imageView2" />

      </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

  </androidx.constraintlayout.widget.ConstraintLayout>
</layout>